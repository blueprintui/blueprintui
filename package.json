{
  "name": "blueprintui",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "author": "Crylan Software",
  "license": "",
  "type": "module",
  "packageManager": "pnpm@10.18.0",
  "engines": {
    "node": "22.19.0"
  },
  "scripts": {
    "ci": "pnpm run ci:run && wireit-cache-validate pnpm run ci:run",
    "ci:run": "wireit",
    "ci:nocache": "pnpm run clean && pnpm i --prefer-offline --frozen-lockfile && pnpm run ci",
    "setup": "curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.40.3/install.sh | bash && unset npm_config_prefix && . ~/.nvm/nvm.sh && nvm install && nvm use && npm install -g pnpm && pnpm run clean && pnpm i --frozen-lockfile && pnpm exec playwright install chromium --with-deps chromium",
    "clean": "git clean -dfX",
    "lint": "wireit",
    "build": "wireit",
    "test": "wireit",
    "test:performance": "wireit",
    "test:api:update": "wireit",
    "format": "wireit",
    "format:fix": "wireit",
    "drafter": "wireit",
    "examples": "wireit",
    "release": "wireit",
    "prepare": "test -n \"$CI\" || husky"
  },
  "wireit": {
    "ci:run": {
      "command": "WIREIT_PARALLEL=1 npm run test:performance",
      "dependencies": [
        "lint",
        "build",
        "test",
        "drafter",
        "examples"
      ]
    },
    "lint": {
      "dependencies": [
        "lint:stylelint",
        "./projects/components:lint",
        "./projects/crane:lint",
        "./projects/grid:lint",
        "./projects/icons:lint",
        "./projects/layout:lint",
        "./projects/themes:lint",
        "./projects/typewriter:lint",
        "./projects/typography:lint"
      ]
    },
    "lint:stylelint": {
      "command": "stylelint --config \"./stylelint.config.cjs\" \"./**/*.css\"",
      "files": [
        "./**/*.css",
        "stylelint.config.cjs",
        "!**/dist/**",
        "!**/node_modules/**"
      ],
      "output": []
    },
    "format": {
      "command": "prettier --config .prettierrc.json --check .",
      "files": [
        "./**/*.md",
        "./**/*.js",
        "./**/*.ts",
        "./**/*.css",
        "./**/*.cjs",
        "./**/*.mjs",
        "./**/*.json",
        "!**/dist/**",
        "!**/node_modules/**"
      ],
      "output": []
    },
    "format:fix": {
      "command": "prettier --config .prettierrc.json --write ."
    },
    "build": {
      "dependencies": [
        "./projects/docs:build",
        "./projects/components:build",
        "./projects/crane:build",
        "./projects/grid:build",
        "./projects/icons:build",
        "./projects/layout:build",
        "./projects/internals/test:build",
        "./projects/themes:build",
        "./projects/typewriter:build",
        "./projects/typography:build"
      ]
    },
    "test": {
      "dependencies": [
        "./projects/components:test",
        "./projects/crane:test",
        "./projects/grid:test",
        "./projects/icons:test",
        "./projects/layout:test",
        "./projects/themes:test",
        "./projects/typewriter:test",
        "./projects/typography:test"
      ]
    },
    "test:performance": {
      "dependencies": [
        "./projects/components:test:performance",
        "./projects/crane:test:performance",
        "./projects/grid:test:performance",
        "./projects/icons:test:performance",
        "./projects/layout:test:performance",
        "./projects/typewriter:test:performance",
        "./projects/typography:test:performance"
      ]
    },
    "test:api:update": {
      "dependencies": [
        "./projects/components:test:api:update",
        "./projects/crane:test:api:update",
        "./projects/grid:test:api:update",
        "./projects/icons:test:api:update",
        "./projects/typewriter:test:api:update"
      ]
    },
    "drafter": {
      "dependencies": [
        "./projects/components:drafter",
        "./projects/crane:drafter",
        "./projects/grid:drafter",
        "./projects/icons:drafter",
        "./projects/layout:drafter",
        "./projects/typewriter:drafter",
        "./projects/typography:drafter"
      ]
    },
    "examples": {
      "dependencies": [
        "./projects/examples/angular:build",
        "./projects/examples/angular:test",
        "./projects/examples/react:build",
        "./projects/examples/vue:build"
      ]
    },
    "release": {
      "command": "echo 'Starting Release:'",
      "dependencies": [
        "release:components",
        "release:crane",
        "release:grid",
        "release:icons",
        "release:layout",
        "release:themes",
        "release:typewriter",
        "release:typography"
      ]
    },
    "release:components": {
      "command": "cd projects/components && pnpm exec semantic-release",
      "dependencies": [
        "release:crane",
        "release:icons",
        "release:themes",
        "release:typewriter"
      ]
    },
    "release:crane": {
      "command": "cd projects/crane && pnpm exec semantic-release"
    },
    "release:grid": {
      "command": "cd projects/grid && pnpm exec semantic-release",
      "dependencies": [
        "release:components"
      ]
    },
    "release:icons": {
      "command": "cd projects/icons && pnpm exec semantic-release",
      "dependencies": [
        "release:themes"
      ]
    },
    "release:layout": {
      "command": "cd projects/layout && pnpm exec semantic-release",
      "dependencies": [
        "release:themes"
      ]
    },
    "release:themes": {
      "command": "cd projects/themes && pnpm exec semantic-release"
    },
    "release:typewriter": {
      "command": "cd projects/typewriter && pnpm exec semantic-release"
    },
    "release:typography": {
      "command": "cd projects/typography && pnpm exec semantic-release",
      "dependencies": [
        "release:themes"
      ]
    }
  },
  "publishConfig": {
    "provenance": true
  },
  "devDependencies": {
    "@blueprintui/cli": "catalog:",
    "@blueprintui/drafter": "catalog:",
    "@blueprintui/layout": "workspace:^",
    "@commitlint/cli": "19.4.1",
    "@commitlint/config-conventional": "19.5.0",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/commit-analyzer": "13.0.0",
    "@semantic-release/exec": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "10.3.3",
    "@semantic-release/release-notes-generator": "14.0.1",
    "@typescript-eslint/eslint-plugin": "8.43.0",
    "@typescript-eslint/parser": "8.43.0",
    "@typescript/lib-dom": "npm:@types/web@^0.0.266",
    "cpy-cli": "6.0.0",
    "esbuild": "0.25.9",
    "eslint": "9.35.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-jasmine": "4.2.2",
    "eslint-plugin-lit": "2.1.1",
    "eslint-plugin-lit-a11y": "5.1.1",
    "eslint-plugin-wc": "3.0.1",
    "glob": "11.0.3",
    "husky": "9.1.7",
    "lightningcss": "1.30.1",
    "lit-analyzer": "2.0.3",
    "playwright": "catalog:",
    "prettier": "3.6.2",
    "rollup-plugin-shell": "1.0.9",
    "semantic-release": "22.0.12",
    "semantic-release-monorepo": "8.0.2",
    "semantic-release-replace-plugin": "1.2.7",
    "source-map-explorer": "2.5.3",
    "stylelint": "16.24.0",
    "stylelint-config-standard": "39.0.0",
    "stylelint-no-px": "2.1.0",
    "wireit": "0.14.12",
    "wireit-cache-validate": "0.0.0"
  },
  "pnpm": {
    "overrides": {}
  }
}
