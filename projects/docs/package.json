{
  "name": "@blueprintui/docs",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "ci": "wireit",
    "start": "wireit",
    "build": "wireit",
    "build:11ty": "wireit",
    "start:rollup": "wireit",
    "deploy": "wireit"
  },
  "wireit": {
    "ci": {
      "dependencies": [
        "build"
      ]
    },
    "start": {
      "command": "npm run build:11ty -- --watch",
      "service": true,
      "dependencies": [
        "build",
        "start:rollup"
      ],
      "env": {
        "WIREIT_LOGGER": "metrics"
      }
    },
    "build": {
      "command": "rolldown -c rolldown.config.mjs",
      "dependencies": [
        "build:11ty"
      ],
      "files": [
        "./src/**/*",
        "./eleventy.config.js",
        "./.eleventyignore",
        "./rolldown.config.mjs"
      ],
      "output": [
        "./dist"
      ]
    },
    "build:11ty": {
      "command": "npx @11ty/eleventy",
      "files": [
        "./src/**/*",
        "./eleventy.config.js",
        "./.eleventyignore",
        "./rolldown.config.mjs"
      ],
      "output": [
        "./_site"
      ],
      "dependencies": [
        "../components:drafter",
        "../crane:drafter",
        "../icons:drafter",
        "../grid:drafter",
        "../typography:drafter",
        "../typewriter:drafter",
        "../virtual:drafter"
      ]
    },
    "start:rollup": {
      "command": "rolldown -c rolldown.config.mjs -w",
      "dependencies": [],
      "service": true
    },
    "deploy": {
      "command": "firebase deploy --only hosting:blueprintui",
      "dependencies": [
        "ci"
      ]
    }
  },
  "homepage": "https://blueprintui.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/blueprintui/components",
    "https": "https://github.com/blueprintui/components.git"
  },
  "author": "Crylan Software",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/blueprintui/components/issues"
  },
  "dependencies": {
    "@blueprintui/components": "workspace:*",
    "@blueprintui/crane": "workspace:*",
    "@blueprintui/grid": "workspace:*",
    "@blueprintui/icons": "workspace:*",
    "@blueprintui/layout": "workspace:*",
    "@blueprintui/orbit": "workspace:*",
    "@blueprintui/themes": "workspace:*",
    "@blueprintui/typewriter": "workspace:*",
    "@blueprintui/typography": "workspace:*",
    "@blueprintui/virtual": "workspace:*",
    "modern-normalize": "catalog:"
  },
  "devDependencies": {
    "@11ty/eleventy": "3.1.2",
    "@11ty/eleventy-plugin-syntaxhighlight": "5.0.2",
    "@web/rollup-plugin-copy": "0.5.1",
    "@web/rollup-plugin-html": "2.3.0",
    "html-minifier": "4.0.0",
    "markdown-it": "14.1.0",
    "rolldown": "latest",
    "rollup-plugin-browsersync": "1.3.3",
    "rollup-plugin-copy": "3.5.0",
    "rollup-plugin-styles": "4.0.0"
  }
}
